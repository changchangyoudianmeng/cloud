/* pages/classify/classify.wxss */
Page{
  height:100%;
  background: #f3f3f3;
}
::-webkit-scrollbar{
  color:white;
  background: #f3f3f3;
}
.container{
  padding:0;
  width:100%;
  height:100%;
  display: flex;
  flex-direction: row;
}
.container .left{
  width:250rpx;
  height:100%;
  background:white;
  justify-content: center;
  align-items: center;
}
.container .right{
  width:500rpx;
  height:100%;
  color:#333;
}
.item{
  width:100%;
  text-align: center;
  justify-content: center;
  align-items: center;
  margin-top:20px;
  font-size:12px;
}