/*输入价格*/
.inputPrice{
  display: flex;
  flex-direction: row;
  width:100%;
  height:100rpx;
  border-bottom:1px solid #ddd;
  line-height: 100rpx;
}
.inputPrice input{
  font-size:13px;
}
.inputPrice text{
  width:100rpx;
}
.inputPrice input{
  height:60rpx;
  margin:20rpx 6rpx; 
}
.priceGivenPane{
  z-index: 999;
  background:rgba(0, 0, 0, 0.2);
  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:100%;
}
.costPrice{
  padding:20rpx;
  background:white;
  position:fixed;
  bottom: 0;
  left: 0;
  width:710rpx;
  height:435rpx;
}
.yes{
  width:300rpx;
  height:60rpx;
  background:green;
  color:white;
  text-align:center;
  margin:20rpx auto;
  line-height: 60rpx;
  letter-spacing: 20rpx;
}