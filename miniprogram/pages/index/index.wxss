Page{
  margin:0;
  padding:0;
}
.container{
  width:100%;
  height:100%;
  margin:0;
  padding:0 20rpx;
  font-size:12px;
}
.title{
  float:left;
  text-align: left;
}
.good{
  width:100%;
  border-top:1px solid #ddd;
  margin:5px 5px 0 5px;
  padding:5px;
}
.userInfo{
  width:100%;
  height:140rpx;
  display: flex;
}
.userPhoto{
  width:120rpx;
  height:120rpx;
  float:left;
}
.userPhoto image{
  width:120rpx;
  height:120rpx;
  border-radius: 50%;
}
.userName{
  margin:15px;
  float:left;
  font-size: 13px;
}
.goodPics{
  display: flex;
  flex-direction: row;
  width: 100%;
  height:200rpx;
}
.goodPics image{
  width:200rpx;
  height:200rpx;
  padding:4rpx
}
.publish_time{
  margin:10rpx 0;
  height:60rpx;
  line-height: 60rpx;
  float:left;
  color:#888;
}

.leave_msg{
  float:left;
  height:60rpx;
  line-height: 60rpx;
  position: relative;
}
.leave_msg image{
  width:38rpx;
  height:30rpx;
  vertical-align: middle;
  margin:10rpx 0 0 20rpx;
}
.leave_msg view{
  padding:4rpx;
  position: absolute;
  right:-10rpx;
  top:14rpx;
  width:16rpx;
  height:16rpx;
  background: #ff5500;
  color:white;
  text-align: center;
  line-height: 16rpx;
  border-radius: 50%;
  font-size: 16rpx;
}
/*商品描述*/
.goodNameAndDesc{
  width:100%;
  height:70rpx;
  display: flex;
  flex-direction: row;
}
.goodNameAndDesc .goodName{
  width:200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  line-height: 60rpx;
}
.goodNameAndDesc .goodDesc{
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left:20rpx;
  line-height: 64rpx;
}
/*价格等*/
.priceEtc{
  width:100%;
  height:60rpx;
}
.priceEtc .icon{
  color:red;
  font-size:9px;
}
.priceEtc .price{
  color:red;
  font-size: 38rpx;
}
.priceEtc .tel{
  float:right;
}
.priceEtc .telicon{
  width:40rpx;
  height:40rpx;
  float:right;
}
scorllview{
  height:100%;
}
.tip{
  height:30px;
  line-height:30px;
  text-align:center;
}
.filter{
  width:100rpx;
  height:100rpx;
  position:fixed;
  right:50rpx;
  bottom:50rpx;
  background:green;
  border-radius:50%;
  text-align: center;
  line-height: 100rpx;
  color:white;
  font-size: 13px;
  z-index: 999;
  letter-spacing: 6rpx;
}
.classifyDetailName{
  width:100%;
  line-height: 70rpx;
  height:70rpx;
  float:left;
  text-align: left;
  margin-bottom:5rpx;
  color:#888;
}
.classify{
  width:100rpx;
  height:40rpx;
  line-height: 40rpx;
  border:1px solid #ddd;
  padding:0 10rpx 0 10rpx;
  text-align: center;
  border-radius:60rpx;
  color:#5cc45b;
}
.search{
  width: 710rpx;
  height:60rpx;
  margin-bottom:5px;
  position: relative;
}
.scrollView{
  width:650rpx;
  height:80rpx;
}
.searchHis{
  position: absolute;
  left:0;
  top:0;
  min-width:650rpx;
  height:60rpx;
  background: white;
  display:flex;
  flex-direction: row;
}
.s_item{
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding:2rpx;
  border:1px solid #888;
  background: #fafafa;
  border-radius: 10rpx;
  margin:10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.closeSearchHis{
  position: absolute;
  right:0;
  top:60rpx;
  width:60rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  overflow: scroll-x;
}
input{
  line-height: 60rpx;
  padding-left:20rpx;
  width:626rpx;
  float:left;
  display: block;
  border-radius: 60rpx;
  border:1px solid #ccc;
}
.search .searchBtn{
  color:white;
  float:left;
  width:60rpx;
  line-height: 60rpx;
  height:60rpx;
}
.search .searchBtn image{
  width: 32px;
  height:32px;
}
.adminTab{
  width:100%;
}
.adminTab .freezingAccount{
  width:120rpx;
  padding:5rpx;
  float:left;
  margin:0 5rpx 5rpx 5rpx;
  border:1px solid #111;
  text-align: center;
}
.adminTab .downCurGood{
  width:120rpx;
  padding:5rpx;
  float:left;
  margin:0 5rpx 5rpx 5rpx;
  border:1px solid #111;
  text-align: center;
}
/*排序*/
.sort{
  width:100%;
  height:60rpx;
  border:0;
  font-family: "STXihei";
}
.sort view{float:left;height:40rpx;line-height: 40rpx;margin:0 10rpx 0 -1px;border:1px solid #ddd;padding:0 20rpx 0 20rpx;border-radius:60rpx;}

.authContainer{
  width:300rpx;
  height:50rpx;
  border:1px solid green;
  position: fixed;
  top:300rpx;
  background:green;
}
.loading{
  width:100rpx;
  height:100rpx;
  overflow: hidden;
  border-radius: 100px;
  position: fixed;
  bottom:50%;
}
.loading image{
  width:242rpx;
  height:122rpx;
  position: absolute;
  left:-66rpx;
  top:-12rpx;
}