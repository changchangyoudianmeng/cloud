/* pages/myself/myself.wxss */
Page {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  font-size: 12px;
}

.container {
  width: 100%;
  height: 100%;
  padding-top: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userInfo {
  width: 100%;
  height: 300rpx;
  background: #5cc45b;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userInfo image {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}
.userInfo text{
  color:white;
  margin-top:20rpx;
}
.authority button{
  float:left;
}
.authority button image{
  background: transparent;
}
.userItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#eee;
}

.userItem view {
  line-height: 100rpx;
  padding-left: 50rpx;
  margin-top: 3rpx;
  background: white;
}
.userItem .msgNotify {
  width: 100%;
  height: 100rpx;
  margin-top: 0;
  position: relative;
}
.userItem .published {
  width: 100%;
  height: 100rpx;
}

.userItem .selled {
  width: 100%;
  height: 100rpx;
}

.userItem .bought {
  width: 100%;
  height: 100rpx;
}
.userItem .wanted {
  width: 100%;
  height: 100rpx;
}
.userItem .admin{
  width: 100%;
  height: 100rpx;
}
.userItem .gt{
  color:#bbb;
  float:left;
}
.userItem .msgNotifyIcon{
  display: block;
  line-height: 30rpx;
  width:30rpx;
  height:30rpx;
  background: red;
  border-radius: 50%;
  text-align: center;
  color: white;
  position: absolute;
  left:160rpx;
  top:35rpx;
}
.userItem .item{
  width:670rpx;
  float:left;
}
button{
  width:48px;
  height:48px;
  padding:0;
  border-radius: 50%;
  margin:2px;
}
button.finger{
  background: transparent
}